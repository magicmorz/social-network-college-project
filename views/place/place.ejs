<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= place.name %> - Instagram</title>
    <link rel="icon" type="image/x-icon" href="/utils/tab_instagram_icon.png" />
    
    <!-- Bootstrap CSS cdn -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/styles/feed.css">
    <link rel="stylesheet" href="/styles/post.css">
    <link rel="stylesheet" href="/styles/theme.css">
    
    <style>
        body {
            background: var(--bg, #fafafa);
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        }
        
        .instagram-header {
            background: var(--card, #ffffff);
            border-bottom: 1px solid var(--border, #dbdbdb);
            padding: 20px 0;
        }
        
        .place-map {
            height: 240px;
            width: 100%;
            border-radius: 8px;
            border: 1px solid var(--border, #dbdbdb);
        }
        
        .place-info {
            background: var(--card, #ffffff);
            border-bottom: 1px solid var(--border, #dbdbdb);
            padding: 24px 0;
        }
        
        .place-name {
            font-size: 28px;
            font-weight: 600;
            color: var(--text, #262626);
            margin: 0 0 4px 0;
        }
        
        .place-subtitle {
            font-size: 14px;
            color: var(--secondary-text, #8e8e8e);
            margin: 0;
        }
        
        .place-tabs {
            background: var(--card, #ffffff);
            border-bottom: 1px solid var(--border, #dbdbdb);
            padding: 0;
        }
        
        .tab-nav {
            display: flex;
            justify-content: center;
            list-style: none;
            margin: 0;
            padding: 0;
        }
        
        .tab-item {
            margin: 0 24px;
        }
        
        .tab-link {
            display: block;
            padding: 16px 0;
            color: var(--secondary-text, #8e8e8e);
            text-decoration: none;
            font-size: 14px;
            font-weight: 600;
            border-bottom: 1px solid transparent;
            transition: all 0.2s ease;
        }
        
        .tab-link.active {
            color: var(--text, #262626);
            border-bottom-color: var(--text, #262626);
        }
        
        .tab-link:hover {
            color: var(--text, #262626);
        }
        
        .posts-container {
            background: var(--card, #ffffff);
            padding: 0;
        }
        
        .posts-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 3px;
            max-width: 935px;
            margin: 0 auto;
        }
        
        .post-item {
            position: relative;
            aspect-ratio: 1;
            overflow: hidden;
            cursor: pointer;
        }
        
        .post-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.2s ease;
        }
        
        .post-item:hover .post-image {
            transform: scale(1.05);
        }
        
        .post-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.2s ease;
        }
        
        .post-item:hover .post-overlay {
            opacity: 1;
        }
        
        .post-stats {
            display: flex;
            align-items: center;
            gap: 16px;
            color: white;
            font-weight: 600;
        }
        
        .post-stat {
            display: flex;
            align-items: center;
            gap: 6px;
        }
        
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: var(--secondary-text, #8e8e8e);
        }
        
        .empty-state .icon {
            width: 62px;
            height: 62px;
            margin: 0 auto 24px;
            border: 2px solid var(--text, #262626);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
        }
        
        .back-nav {
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 1000;
            background: rgba(0, 0, 0, 0.5);
            color: white;
            border: none;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        @media (max-width: 768px) {
            .place-name {
                font-size: 24px;
            }
            
            .tab-item {
                margin: 0 16px;
            }
            
            .posts-grid {
                grid-template-columns: repeat(3, 1fr);
                gap: 2px;
            }
        }
        
        /* Dark theme */
        [data-theme="dark"] body {
            background: var(--bg, #000000);
        }
        
        [data-theme="dark"] .instagram-header,
        [data-theme="dark"] .place-info,
        [data-theme="dark"] .place-tabs,
        [data-theme="dark"] .posts-container {
            background: var(--card, #000000);
            border-color: var(--border, #262626);
        }
    </style>
</head>

<body>
    <!-- Back Navigation -->
    <button class="back-nav" onclick="history.back()" title="Go back">
        <i class="bi bi-arrow-left"></i>
    </button>

    <!-- Instagram Header with Map -->
    <div class="instagram-header">
        <div class="container" style="max-width: 935px;">
            <div id="map" class="place-map"></div>
        </div>
    </div>

    <!-- Place Info Section -->
    <div class="place-info">
        <div class="container" style="max-width: 935px;">
            <h1 class="place-name"><%= place.name %></h1>
            <p class="place-subtitle">
                City â€¢ <%= place.postsCount.toLocaleString() %> posts
            </p>
        </div>
    </div>

    <!-- Tab Navigation -->
    <div class="place-tabs">
        <div class="container" style="max-width: 935px;">
            <ul class="tab-nav">
                <li class="tab-item">
                    <a href="#" class="tab-link active">Top</a>
                </li>
                <li class="tab-item">
                    <a href="#" class="tab-link">Recent</a>
                </li>
                <li class="tab-item">
                    <a href="#" class="tab-link">In the area</a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Posts Grid -->
    <div class="posts-container">
        <div class="container" style="max-width: 935px; padding: 0;">
            <% if (posts.length > 0) { %>
                <div class="posts-grid">
                    <% posts.forEach(post => { %>
                        <div class="post-item">
                            <% const filename = post.image.split('/').pop(); %>
                            <img src="/uploads/user_<%= post.user._id %>/posts/<%= encodeURIComponent(filename) %>" class="post-image" alt="Post from <%= place.name %>">
                            <div class="post-overlay">
                                <div class="post-stats">
                                    <div class="post-stat">
                                        <i class="bi bi-heart-fill"></i>
                                        <span><%= (post.likesCount || 0).toLocaleString() %></span>
                                    </div>
                                    <div class="post-stat">
                                        <i class="bi bi-chat-fill"></i>
                                        <span><%= (post.commentsCount || 0).toLocaleString() %></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <div class="icon">
                        <i class="bi bi-camera"></i>
                    </div>
                    <h3 style="margin: 0 0 8px 0; font-weight: 300;">No posts yet</h3>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Google Maps JavaScript API -->
    <script async defer 
        src="https://maps.googleapis.com/maps/api/js?key=<%= googleMapsApiKey %>&callback=initMap">
    </script>
    
    <script>
        // Place data from server (safe JSON parsing)
        window.placeData = {
            name: <%- JSON.stringify(place.name) %>,
            address: <%- JSON.stringify(place.formattedAddress) %>,
            lat: <%= place.coordinates.lat %>,
            lng: <%= place.coordinates.lng %>,
            postsCount: <%= place.postsCount %>
        };
        
        function initMap() {
            const placeLocation = { 
                lat: window.placeData.lat, 
                lng: window.placeData.lng 
            };
            
            const map = new google.maps.Map(document.getElementById('map'), {
                zoom: 14,
                center: placeLocation,
                mapTypeId: google.maps.MapTypeId.ROADMAP,
                disableDefaultUI: true,
                zoomControl: true,
                styles: [
                    {
                        featureType: 'poi.business',
                        stylers: [{ visibility: 'off' }]
                    },
                    {
                        featureType: 'poi.park',
                        elementType: 'labels.text',
                        stylers: [{ visibility: 'off' }]
                    }
                ]
            });
            
            const marker = new google.maps.Marker({
                position: placeLocation,
                map: map,
                title: window.placeData.name,
                icon: {
                    path: google.maps.SymbolPath.CIRCLE,
                    scale: 8,
                    fillColor: '#1877f2',
                    fillOpacity: 1,
                    strokeColor: '#ffffff',
                    strokeWeight: 2
                }
            });
            
            const infoWindow = new google.maps.InfoWindow({
                content: `
                    <div style="padding: 8px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;">
                        <div style="font-weight: 600; margin-bottom: 4px;">${window.placeData.name}</div>
                        <div style="color: #8e8e8e; font-size: 12px;">${window.placeData.postsCount.toLocaleString()} posts</div>
                    </div>
                `
            });
            
            marker.addListener('click', () => {
                infoWindow.open(map, marker);
            });
        }
        
        // Tab functionality
        document.addEventListener('DOMContentLoaded', function() {
            const tabLinks = document.querySelectorAll('.tab-link');
            
            tabLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    //Remove active class from all of the tabs
                    tabLinks.forEach(tab => tab.classList.remove('active'));
                    
                    //Add active class to clicked tab
                    this.classList.add('active');
                });
            });
        });
    </script>
</body>
</html> 